<section class="login">
  <div class="login_container">
    <div class="login-part">
      <div class="title">
        <img class="logoimg" src="/assets/logo.png"></im>
      </div>
      <div class="content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="fieldwrap">
            <div class="fieldinner">
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'my-input' %>
              </div>
        
              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", class: 'my-input' %>
              </div>
            </div>
            <div class="actions">
            <%= f.submit "로그인", class: 'my-btn' %>
            </div>
          </div>
        
        <div>
          <% if devise_mapping.rememberable? -%>
          
            <div class="remember_field">
              <%= f.check_box :remember_me %>
              <%= f.label :기억하기 %>
              <span style="text-align:right;">
              <%= render "users/shared/links" %>
              </span>
            </div>
          <% end -%>
        
          
        <% end %>
        <div style="text-align:right;"></div>
        
      </div>
    </div>
  </div>
</section>

